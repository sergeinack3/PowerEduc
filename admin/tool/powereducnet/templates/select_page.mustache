{{!
    @template tool_powereducnet/select_page

    This template renders the course selection page for the PowerEducNet tool.

    Example context (json):
    {
        "name": "A cat picture",
        "cancellink": "https://powereducsite/my"
    }
}}
<div data-region="powereduc-net-select">
    <div class="alert alert-primary" role="alert">
        {{#str}} notification, tool_powereducnet, {"name": {{#quote}}{{name}}{{/quote}}, "cancellink": {{#quote}}{{cancellink}}{{/quote}}, "type": {{#quote}}{{type}}{{/quote}}  } {{/str}}
    </div>
    <h3>{{#str}} selectacourse {{/str}}</h3>
    <div class="searchbar input-group w-50" role="search">
        <label for="searchinput">
            <span class="sr-only">{{#str}} searchcourses, tool_powereducnet {{/str}}</span>
        </label>
        <input type="text"
               data-region="search-input"
               id="searchinput"
               class="form-control form-control-lg searchinput border-right-0 px-3 py-2"
               placeholder="{{#str}} search, core {{/str}}"
               name="search"
               autocomplete="off"
        >
        <div class="searchbar-append d-flex border border-secondary border-left-0 px-3 py-2">
            <div data-region="search-icon">
                {{#pix}} a/search, core {{/pix}}
            </div>
            <div class="clear d-none">
                <button class="btn p-0" data-region="clear-icon">
                    <span class="d-flex" aria-hidden="true">{{#pix}} e/cancel, core {{/pix}}</span>
                    <span class="sr-only">{{#str}} clearsearch, tool_powereducnet {{/str}}</span>
                </button>
            </div>
        </div>
    </div>
    <div class="my-4" data-region="mnet-courses" aria-live="polite"></div>
</div>
