<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
       <div class="d-flex justify-content-around mt-5">
        <div class="col-2">
         <label>Choisir l'etablissement</label>
            <select name="campus"onchange="if (this.value) location.href=this.value;" class="form-control ">
            <option value=""></option>
            {{#campus}}
            <option value="{{salleeleretirer}}?idca={{id}}">{{libellecampus}}</option>
            {{/campus}}
            </select>
          </div>
          <div class="col-2">
              <label>Choisir filiere</label>
              <select class="form-control filiere" name="filiere">
                <option value=""></option>
              {{#filiere}}
                <option value="{{id}}">{{libellefiliere}}</option>
              {{/filiere}}
              </select>
          </div>
          <div class="col-2">
              <label>Choisir Specialite</label>
              <select class="form-control specialite" name="specialite">
                <option value=""> </option>
             
              </select>
          </div>
                <!--<option value="{{id}}">{{libellespecialite}}</option>-->
          <div class="col-2">
              <label>Choisir Cycle</label>
              <select class="form-control cycle" name="cycle">
                <option value=""> </option>
              </select>
          </div>

          <div class="col-2">
              <label>Choisir Salle</label>
              <select class="form-control salle1" name="salleretirer">
                <option value="">select </option>
              </select>
          </div>
        </div>
          <div class="col-2">
              <label>Choisir Cours</label>
              <select class="form-control courss" name="cours">
                <option value="">select </option>
              </select>
          </div>
        </div>
            <input type="hidden" value="{{root}}" class="roote"/>
            <input type="hidden" value="{{idca}}" class="campus"/>
        
            <div class="mt-5" style="margin-left:28px">
                <button class="group btn btn-primary">Ajouter un groupe</button>
            </div>
        <div class="mt-5">
            <table class="table table-striped table-hover">
                   {{! <input type="checkbox" id="checkboxMaster" class="toutsel"/> }}
                <thead>
                    <tr>
                        <th>Cours </th>
                        {{! <th>Prenom</th>
                        <th>Action</th> }}
                    </tr>
                </thead>
                <tbody class="sall">
                    
                </tbody>
            </table>
        </div>

    <script src="{{wwwroot}}/powereduc1/local/powerschool/js/jquery.js"></script>
    <script src="{{wwwroot}}/powereduc1/local/powerschool/js/groupsall.js"></script>
</body>
</html>