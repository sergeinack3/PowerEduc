<h1>seance de cours</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Cours</th>
                <th scope="col">Semestre</th>
                <th scope="col">Specialite</th>
                <th scope="col">Cycle</th>
                <th scope="col">Date de la seance</th>
                <th scope="col">Heure de debut</th>
                <th scope="col">Heure de fin</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#seance}}
            <tbody>
              <tr>
                
                    <th scope="row">{{id}} </th>
                    <td>{{idcourses}} </td>
                    <td>{{idsemestre}} </td>
                    <td>{{idspecialite}} </td>
                    <td>{{idcycle}} </td>
                    <td>{{dateseance}} </td>
                    <td>{{heuredebutseance}} </td>
                    <td>{{heurefinseance}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{seanceedit}}?id={{id}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{seancesupp}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/seance}}
          </table>
</div>

<hr>