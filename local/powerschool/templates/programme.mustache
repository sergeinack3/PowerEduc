<div class="d-flex flex-wrap align-items-center">
  <div class="form-group fitem">

    
  <input type="button" class="btn btn-info align-items-center" value="Definir les Periodes" onclick="location.href='{{periode}}'"> 
  </div>

</div>

<h1>Programme de cours</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Cours</th>
                <th scope="col">Semestre</th>
                <th scope="col">Specialite</th>
                <th scope="col">Cycle</th>
                <th scope="col">Date du cours</th>
                <th scope="col">Heure de debut</th>
                <th scope="col">Heure de fin</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#programme}}
            <tbody>
              <tr>
                
                    <th scope="row">{{id}} </th>
                    <td>{{fullname}} ({{shortname}})</td>
                    <td>{{libellesemestre}} </td>
                    <td>{{libellespecialite}} ({{abreviationspecialite}}) </td>
                    <td>{{libellecycle}} ({{nombreannee}} ans) </td>
                    <td>{{datecours}} </td>
                    <td>{{heuredebutcours}}h </td>
                    <td>{{heurefincours}}h</td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{programmeedit}}?id={{id}}&idca={{idca}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{programmesupp}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/programme}}

          </table>
</div>

<hr>