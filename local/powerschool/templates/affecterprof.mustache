<html>
  <head>
  </head>
    <body> 
       
        <h1>Enregistrer un affecter de professeur</h1>
      <form location.href='{{courssemestre}}' method="post">
        <div class="d-flex justify-content-around">
          <div class="col-2">
              <label>Choisir professeur</label>
              <select class="form-control professeur" name="professeur">
              {{#professeur}}
                <option value="{{userid}}">{{firstname}}-{{lastname}}</option>
              {{/professeur}}
              </select>
          </div>
          <div class="col-2">
              <label>Choisir Specialite</label>
              <select class="form-control specialite" name="specialite">
              {{#specialite}}
                <option value="{{id}}">{{libellespecialite}}</option>
              {{/specialite}}
              </select>
          </div>
          <div class="col-2">
              <label>Choisir Cycle</label>
              <select class="form-control cycle" name="cycle">
              </select>
          </div>
          <div class="col-2">
              <label>Choisir cours</label>
              <select class="form-control cours" name="cours">
                <option>

                </option>
              </select>
          </div>
          <div class="col-2">
              <label>Choisir Semestre</label>
              <select class="form-control semestre" name="semestre">
              </select>
          </div>
        </div>
          <div class="ms-4">
              <button class="btn btn-primary btn-lg col-2 text-center mt-3" id="btn-recherche">Enregistrer</button>
          </div>
      </form>
       <div class="d-flex flex-wrap align-items-center mt-5">
          <div class="form-group fitem">  
          <input type="button" class="btn btn-info align-items-center" value="suivant" onclick="location.href='{{courssemestre}}'"> 
          </div>
        </div>
        <div class="table card mt-2 mb-2">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">id</th>
                        <th scope="col">Professeurs</th>
                        <th scope="col">Cours & Specialite</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    {{#affecterprof}}
                    <tbody>
                      <tr>
                        
                            <th scope="row">{{id}} </th>
                            <td>{{lastname}}-{{firstname}} </td>
                            <td>{{fullname}}-{{libellecycle}}-{{libellespecialite}}-{{libellesemestre}} </td>
                            <td>
                                <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{affecterprofedit}}?id={{idaffe}}'">
                                <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{affecterprofsupp}}?id={{idaffe}}'">
                            </td>
                        </tr>
                    </tbody>
                    
                    {{/affecterprof}}
                  </table>
        </div>
          <input type="hidden" value="{{root}}" class="roote"/>
        <hr>
    <script src="{{wwwroot}}/moodle/local/powerschool/js/jquery.js"></script>
    <script src="{{wwwroot}}/moodle/local/powerschool/js/affecterprofe.js"></script>
    </body>
  </html>