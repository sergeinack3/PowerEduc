<h1>Liste des modes de paiements</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Libelle du mode de paiement</th>
                <th scope="col">abreviation du mode de paiement</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#modepaiement}}
            <tbody>
              <tr>
                
                    <th scope="row">{{id}} </th>
                    <td>{{libellemodepaiement}} </td>
                    <td>{{abreviationmodepaie}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{modepaiementedit}}?id={{id}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{modepaiementsupp}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/modepaiement}}
          </table>
</div>

<hr>