<div class="d-flex flex-wrap align-items-center">
    <div class="form-group fitem">
  
      
    <input type="button" class="btn btn-info align-items-center" value="suivant" onclick="location.href='{{campus}}'"> 
    </div>
  
  </div>

<h1>Liste des semestres</h1>
<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Annee Scolaire</th>
                <th scope="col">Numero semestre</th>
                <th scope="col">libelle semestre</th>
                <th scope="col">date de debut</th>
                <th scope="col">date de fin</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                
{{#semestre}}
                    <th scope="row">{{id}} </th>
                    <td> <strong> {{datedebut}} - {{datefin}} </strong></td>
                    <td>{{numerosemestre}} </td>
                    <td>{{libellesemestre}} </td>

                    <td>{{datedebutsemestre}} </td>
                    <td>{{datefinsemestre}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{semestreedit}}?id={{id}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{semestresupp}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/semestre}}
          </table>
</div>

<hr>