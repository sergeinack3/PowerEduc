<h1>Liste des salles</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Numero salle</th>
                <th scope="col">capacite salle</th>
                <th scope="col">campus</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#salle}}
            <tbody>
              <tr>
                
                    <th scope="row">{{id}} </th>
                    <td>{{numerosalle}} </td>
                    <td>{{capacitesalle}} </td>
                    <td> {{villecampus}} - {{libellecampus}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{salleedit}}?id={{id}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{sallesupp}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/salle}}
          </table>
</div>

