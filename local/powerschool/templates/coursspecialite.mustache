<div class="d-flex flex-wrap align-items-center">
  <div class="form-group fitem">

    
  <input type="button" class="btn btn-info align-items-center" value="suivant" onclick="location.href='{{affecterprof}}'"> 
  </div>

</div>

<h1>Liste des cours_specialites</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Cours</th>
                <th scope="col">Specialites</th>
                <th scope="col">Cycles</th>
                <th scope="col">Credit ou Coef</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#coursspecialite}}
            <tbody>
              <tr>
                
                    <th scope="row">{{id}} </th>
                    <td>{{fullname}} ({{shortname}}) </td>
                    <td>{{libellespecialite}} ({{abreviationspecialite}}) </td>
                    <td>{{libellecycle}} ({{nombreannee}}) </td>
                    <td>{{credit}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{coursspecialiteedit}}?id={{id}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{coursspecialitesupp}}?id={{id}}'">
                        <input type="button" class="btn btn-warning local_annee_delete_button" value="semestre" onclick="location.href='{{affectersemes}}?idcosp={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/coursspecialite}}
          </table>
</div>

<hr>