<h1>inscription de cours</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Etudiants</th>
                <th scope="col">Ann√©e scolaire</th>
                <th scope="col">Campus</th>
                <th scope="col">Specialite</th>
                <th scope="col">Cycle</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#inscription}}
            <tbody>
              <tr>
                
                    <th scope="row"> {{id}} </th>
                    <td>{{firstname}} {{lastname}}</td>
                    <td>{{datedebut}} - {{datefin}} </td>
                    <td>{{villecampus}} - {{libellecampus}}  </td>
                    <td>{{libellespecialite}}  ({{abreviationspecialite}})  </td>
                    <td>{{libellecycle}} ({{nombreannee}} ans) </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{inscriptionedit}}?id={{id}}'">
                        <input type="button" class="btn btn-warning local_annee_delete_button" value="payer" onclick="location.href='{{inscriptionpayer}}?idins={{id}}&idfi={{idfiliere}}&idcy={{idcycle}}&idca={{idcampus}}&idsp={{idspecialite}}'">
                        <input type="button" class="btn btn-info local_annee_delete_button" value="affecter" action="affectercours" onclick="location.href='{{affectercours}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            {{/inscription}}
          </table>
</div>

