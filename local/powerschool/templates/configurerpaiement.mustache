<h1>Liste de configuration paiement</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Filiere</th>
                <th scope="col">Tranche</th>
                <th scope="col">Cycle</th>
                <th scope="col">Specialite</th>
                <th scope="col">Somme</th>
                <th scope="col">Date Limite</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#configurer}}
              <tr>
                
                    <th scope="row">{{idconf}} </th>
                    <td>{{libellefiliere}} </td>
                    <td>{{libelletranche}} </td>
                    <td>{{libellecycle}} </td>
                    <td>{{libellespecialite}} </td>
                    <td>{{somme}} </td>
                    <td>{{datelimite}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{configedit}}?id={{idconf}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{configsupp}}?id={{idconf}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/configurer}}
          </table>
</div>

<hr>