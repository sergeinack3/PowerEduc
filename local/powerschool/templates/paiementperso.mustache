<div class="d-flex flex-wrap align-items-center">

</div>

<h1>Somme à Payer</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Differentes Tranches</th>
                <th scope="col">Somme</th>
                <th scope="col">Date Limité</th>
              </tr>
            </thead>
            {{#filierecycletran}}
            <tbody>
              <tr>
                
                    <td>{{libelletranche}} </td>
                    <td>{{somme}} </td>
                    <td>{{datelimite}} </td>
                </tr>
            </tbody>
            {{/filierecycletran}}
                <tr>
                   <td colspan="6">TOTAL:{{montant}}</td>
                </tr>
          </table>
</div>


<h1>Liste des paiements</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Mode de paiement</th>
                <th scope="col">Tranche</th>
                <th scope="col">Date</th>
                <th scope="col">Montant</th>
              </tr>
            </thead>
            {{#paiement}}
            <tbody>
              <tr>
                
                    <th scope="row">fiche-{{paid}} </th>
                    <td>{{libellemodepaiement}} </td>
                    <td>{{libelletranche}} </td>
                    <td>{{timecreated}} </td>
                    <td>{{montant}} </td>
                </tr>
            </tbody>
            
            {{/paiement}}
                <tr>
                    <td colspan="4">TOTAL: {{somme}}  Somme à payer:{{montant}} Reste:{{reste}}</td>
                </tr>

          </table>
</div>

<hr>